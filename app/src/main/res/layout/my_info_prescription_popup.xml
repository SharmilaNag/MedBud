<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6">

    <ImageView
        android:id="@+id/myInfoPopupImgPrescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@drawable/placeholder"
        android:layout_margin="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/myInfoPopupImgCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_75"
            android:src="@drawable/camera1"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/myInfoPopupImgBrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_75"
            android:src="@drawable/gallery1"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/myInfoPopupBtnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/transparent_75"
            android:src="@drawable/save"/>
    </LinearLayout>

</LinearLayout>